<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tk.codeuniq.jobblog.blog">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="Job Notifier Malayalam"
        android:roundIcon="@mipmap/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="tk.codeuniq.jobblog.blog.MainActivity"
            android:configChanges="orientation"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="tk.codeuniq.jobblog.blog.Login.LoginActivity"
            android:configChanges="orientation"
             />
        <activity
            android:name="tk.codeuniq.jobblog.blog.Login.RegisterActivity"
            android:configChanges="orientation"
            />
        <activity android:name="tk.codeuniq.jobblog.blog.SetupActivity" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" /> <!-- optional (needed if default theme has no action bar) -->

        <activity android:name="tk.codeuniq.jobblog.blog.NewPostActivity" />
        <activity android:name="tk.codeuniq.jobblog.blog.CommentsActivity" />
    </application>

</manifest>